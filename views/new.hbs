<form action="/records" method="POST">
  <div class="container my-4 new">
    <div class="row">
      <div class="col-12 col-md-10 col-lg-8 mx-auto">
        <div class="row my-3">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <h5 class="new-title text-center">請輸入你的支出</h5>
          </div>
        </div>
        <div class="note row">* 必填欄位</div>
        <div class="form-group row mb-5 d-flex">
          <label class="col-sm-2 col-form-label text-center">
            名稱*：
          </label>
          <div class="col-sm-10">
            <input class="w-100 form-control" type="text" name="name">
          </div>
        </div>

        <div class="form-group row mb-5 d-flex">
          <div class="col-sm-2 col-form-label text-center">
            日期*：
          </div>
          <div class="col-sm-10">
            <input class="w-100 form-control" type="date" name="date">
          </div>
        </div>

        <div class="form-group row mb-5 d-flex">
          <div class="col-sm-2 col-form-label text-center">
            類別*：
          </div>
          <div class="col-sm-10">
            <select name="category" class="form-control">
              {{#each categoryList}}
                <option>{{this}}</option>
              {{/each}}
            </select>
          </div>
        </div>

        <div class="form-group row mb-5 d-flex">
          <div class="col-sm-2 col-form-label text-center">
            金額*：
          </div>
          <div class="col-sm-10">
            <input class="w-100 form-control" type="text" name="amount">
          </div>
        </div>

        <div class="row my-3">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <button type="submit" class="col-12 btn btn-outline-secondary create-btn">新增支出</button>
          </div>
        </div>

      </div>
    </div>
  </div>
</form>